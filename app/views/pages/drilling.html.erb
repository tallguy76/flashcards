<% provide(:title, "Wei Jian An Character Drill") %>
<div id="container" class="container">

  <div id="main" class="row">
    <div class="col-xs-3">
      <img src="weijianan_2.png" alt="unmetwellknown" id="logo" />
      <!-- <div id="logo"></div> -->
      <div class="off-side " id="previous-box">
        <div class="button-holder bordered">
        <button id="previous" type="button" class="btn btn-default">Previous</button><br>
        <span class="key-shortcut">Backspace</span>
        </div>
      </div>
    </div>
    <div class="col-sm-3 pull-right">
      <div id="hint" class="hint invisible off-side"><span>speak</span></div>
      <div id="alt-char" class="answer invisible pull-right"><span class="zh_text">说话</span></div>
    </div>
    <div class="col-sm-6">
      <div id="display" class="row">
        <div id="entry" class="entry primary main-col"><span lang="zh">說話</span></div>
        <div class="dual-pinyin">
          <div id="pinyin" class="answer invisible main-col"><span>shuō huà</span></div>
        </div>
        <div class="dual-pinyin">
          <div id="alt-pinyin" class="answer invisible main-col"><span>shot huah</span></div>
        </div> <!-- .dual-pinyin -->
        <div class="col-sm-3 hidden-xs answer invisible">
          <i data-placement=​"right" data-title="GCR" data-content="The second romanized form is General Chinese Romanization. This system was the retirement project of Yuen Ren Chao (趙元任), the notable linguist and Harvard professor. It was designed to be usable with all major dialects and not to favor standard Mandarin. Distinctive features include tone spelling (no diacriticals), a q- for an initial ng-sound lost in Mandarin, and dr-, sr-, zr- for ancient retroflex consonants. Prof.&nbsp;Chao also proposed overhauling the character system so that each spelling would have a single character associated with it and full literacy could be achieved by learning only 2085 characters." class="glyphicon glyphicon-question-sign"></i>
        </div>
      </div> <!-- #display -->
      <div>
        <div class="row">
          <div class="main-col">
            <div class="button-holder bordered">
              <button id="show_hint" type="button" class="btn btn-info">Show (English) Hint</button><br>
              <span class="key-shortcut">H</span>
            </div>
          </div>
        </div>
        <div class="main-col row" id="assess">
          <div class="button-holder bordered">
            <button id="incorrect" type="button" class="btn btn-warning">Needs Review</button><br>
            <span class="key-shortcut">N</span>
          </div>
          <div class="button-holder bordered">
            <button id="correct" type="button" class="btn btn-success">Known</button><br>
            <span class="key-shortcut">K</span>
          </div>
        </div> <!-- .assess -->
        <div class="main-col">
          <div class="button-holder bordered">
            <button id="show" type="button" class="btn btn-primary">Show Answer</button><br>
            <span class="key-shortcut">Space</span>
          </div>
        </div>
      </div>
    </div>

  </div> <!-- #main -->


    <div class="row">

    </div>
    <div class="row">
      <div id="settings" class="col-sm-4">
        <div class="btn-group-vertical">
          <button id="toggle_format" type="button" class="btn btn-info">Use traditional characters</button>
          <button id="toggle_display" type="button" class="btn btn-info">Prompt with pinyin</button>
        </div>
        <div id="font_selector" class="row bordered">
          Available fonts:
          <select id="fonts">
            <option>fangsong</option>
            <option>song</option>
            <option>kaiti</option>
            <option>heiti</option>
            <option>calligraphic</option>
          </select>
          <button id="load_font" type="button" class="btn btn-primary">Load</button>
        </div>
        <div id="vocab_selector" class="row bordered">
          Available vocabulary lists:
          <select id="vocab_lists">
            <% @v_lists.each do |v| %>
            <option><%= v.name %></option>
            <% end %>
          </select>
          <button id="load_vocab_list" type="button" class="btn btn-primary">Load</button>
        </div>
      </div>
      <div class="col-sm-8">
        <div id="summary"></div>
        <div id="restart" class="latent">
          <div> <button id="review_all" type="button" class="btn btn-default">review all</button></div>
          <div> <button id="review_incorrect" type="button" class="btn btn-default">review missed</button></div>
        </div>
      </div>
    </div>
</div>
<script type="text/template" id="prompt-pinyin">
    <div class="entry dual-pinyin">
      <div class="row">
        <div id="pinyin" class="main-col xs-col-9"><span>shuō huà</span></div>
      </div>
      <div class="row">
        <div id="alt-pinyin" class="main-col xs-col-8"><span>shot huah</span>
        </div>
      </div> <!-- .row -->
    </div> <!-- .dual-pinyin -->
    <div id="entry" class="answer invisible primary main-col"><span lang="zh">說話</span></div>
</script>

